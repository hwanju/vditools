SEND_READY_SIGNAL
WAIT_START_SIGNAL

NR_THREADS=`cat /proc/cpuinfo | grep processor | wc -l`
if [ "$MIXED_TRACE" == "1" ]; then
	val=`echo $OPTIONAL_INFO | cut -d: -f2`
        if [ "$val" != "" ]; then
                NR_THREADS=$val
        fi
fi
for i in $NR_THREADS; do 
        /root/cpulimit/cpubound &
done

while true; do
	sleep 10
	# query to host whether the minimum number of iterations are ended
	SEND_QUERY_SIGNAL

	# get a message from host
	while [ 1 ]
	do
		if [ -e /tmp/query ]
		then
			break
		fi
		sleep 0.01
	done

	# (stop or repeat)
	reply=$(cat /tmp/query)
	if [ "$reply" = "stop" ]
	then
		break
	fi
	rm /tmp/query
done
